    "bignumber",
    "bitcoinjs",
    "clar",
    "codegen",
    "devenv",
    "iarna",
    "keccak",
    "keychain",
    "mocknet",
    "parens",
    "secretkey",
    "xbtc",
    "xusd"
  ]
}
